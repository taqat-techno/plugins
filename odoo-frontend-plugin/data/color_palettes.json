{
  "semantic_colors": {
    "o-color-1": {
      "name": "Primary",
      "purpose": "Brand color, buttons, links, headers",
      "typical_use": ["btn-primary", "text-primary", "bg-primary"],
      "default": "#207AB7"
    },
    "o-color-2": {
      "name": "Secondary",
      "purpose": "Accent color, CTAs, highlights",
      "typical_use": ["btn-secondary", "text-secondary", "accent elements"],
      "default": "#FB9F54"
    },
    "o-color-3": {
      "name": "Light Background",
      "purpose": "Section backgrounds, cards, alternating sections",
      "typical_use": ["section backgrounds", "card backgrounds", "light overlays"],
      "default": "#F6F4F0"
    },
    "o-color-4": {
      "name": "White/Base",
      "purpose": "Body background, content areas",
      "typical_use": ["body background", "white space", "content containers"],
      "default": "#FFFFFF"
    },
    "o-color-5": {
      "name": "Dark Text",
      "purpose": "Headings, body text, dark elements",
      "typical_use": ["headings", "body text", "footer backgrounds"],
      "default": "#191A19"
    }
  },
  "derivation_rules": {
    "when_only_two_colors": {
      "o-color-3": "lighten(primary, 45%)",
      "o-color-4": "#FFFFFF",
      "o-color-5": "darken(primary, 40%) or #191A19"
    }
  },
  "preset_palettes": {
    "corporate_blue": {
