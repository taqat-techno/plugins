{
  "name": "odoo-frontend",
  "version": "4.0.0",
  "description": "Advanced Odoo frontend development with Figma browser automation for design extraction, /create-theme command, PWA support, TypeScript, testing frameworks, and performance optimization. Features Chrome MCP integration, automatic color/typography extraction, $o-website-values-palettes reference, theme mirror model architecture, publicWidget patterns, and MCP integration for Odoo 14-19.",
  "author": {
    "name": "TAQAT Techno",
    "email": "contact@taqat-techno.com",
    "url": "https://github.com/taqat-techno"
  },
  "homepage": "https://github.com/taqat-techno/plugins/tree/main/odoo-frontend-plugin",
  "repository": "https://github.com/taqat-techno/plugins",
  "license": "MIT",
  "keywords": [
    "odoo",
    "frontend",
    "theme",
    "figma",
    "figma-to-odoo",
    "design-extraction",
    "browser-automation",
    "chrome-mcp",
    "create-theme",
    "theme-generator",
    "website-values-palettes",
    "publicWidget",
    "mirror-models",
    "pwa",
    "typescript",
    "javascript",
    "bootstrap",
    "owl-framework",
    "website",
    "accessibility",
    "wcag",
    "performance",
    "real-time",
    "websockets",
    "jest",
    "cypress",
    "vite",
    "odoo14",
    "odoo15",
    "odoo16",
    "odoo17",
    "odoo18",
    "odoo19"
  ],
  "skills": "./odoo-frontend/",
  "commands": "./commands/",
  "hooks": "./hooks/hooks.json",
  "scripts": "./odoo-frontend/scripts/",
  "memories": "./memories/",
  "data": "./data/",
  "helpers": "./helpers/",
  "validators": "./validators/",
  "reference": "./reference/",
  "metadata": {
    "odoo-versions": ["14", "15", "16", "17", "18", "19"],
    "bootstrap-versions": ["4.x", "5.1.3"],
    "javascript-features": ["ES2020+", "TypeScript", "Owl v1/v2", "Web Components", "publicWidget"],
    "testing-frameworks": ["Jest", "Cypress", "BackstopJS"],
    "performance-tools": ["Core Web Vitals", "Lighthouse", "Vite"],
    "accessibility": ["WCAG 2.1 AA", "ARIA", "Screen Readers"],
    "real-time": ["WebSockets", "SSE", "Push Notifications"],
    "mcp-tools": ["claude-in-chrome", "figma", "chrome-devtools", "filesystem"],
    "figma-integration": {
      "browser-automation": true,
      "color-extraction": true,
      "typography-extraction": true,
      "display-sizes": true,
      "auto-palette-generation": true
    },
    "theme-features": {
      "website-values-palettes": true,
      "color-semantic-structure": true,
      "mirror-model-architecture": true,
      "individual-page-files": true,
      "publicWidget-editableMode": true,
      "snippet-groups": true,
      "figma-to-theme": true
    },
    "theme-scaffolding": true,
    "auto-detection": true
  }
}