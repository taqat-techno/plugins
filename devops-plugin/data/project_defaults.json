  "contextRules": {
    "persistence": {
      "description": "Context persists throughout conversation session",
      "resetOn": "explicit_switch_or_new_session"
    },
    "detection": {
      "method": "user_activity_analysis",
      "fallback": "ask_user",
      "confirmSelection": true
    },
    "override": {
      "temporary": {
        "triggers": ["in", "for", "from"],
        "behavior": "one_time_query_only"
      },
      "permanent": {
        "triggers": ["switch to", "use", "work on", "change project to", "set project"],
        "behavior": "update_default_context"
      }
    },
    "multiProject": {
      "triggers": ["all projects", "across all projects", "every project", "all my work"],
      "behavior": "query_all_aggregate_results"
    }
  },

  "switchPhrases": {
    "permanent": [
      "switch to {project}",
      "use {project}",
      "work on {project}",
      "change project to {project}",
      "set project {project}",
      "default project {project}"
    ],
    "temporary": [
      "in {project}",
      "for {project}",
      "from {project}",
      "{query} in {project}"
    ],
    "multiProject": [
      "all projects",
      "across all projects",
      "every project",
      "all my work"
    ],
    "queryContext": [
      "what project am I in",
      "current project",
      "which project",
      "show context"
    ]
  },

  "outputFormat": {
    "contextIndicator": "üìÅ Project: {projectName}",
    "tempOverride": "üìÅ Querying: {tempProject} (one-time)\nüìå Default: {defaultProject}",
    "multiProject": "üìÅ Querying all projects...",
    "switchConfirm": "‚úì Switched to {newProject}\n\nPrevious: {oldProject}\nCurrent: {newProject}"
  },

  "urlTemplates": {
    "workItem": "https://dev.azure.com/TaqaTechno/{projectUrlPath}/_workitems/edit/{workItemId}",
    "board": "https://dev.azure.com/TaqaTechno/{projectUrlPath}/_boards/board",
    "backlog": "https://dev.azure.com/TaqaTechno/{projectUrlPath}/_backlogs/backlog",
    "sprint": "https://dev.azure.com/TaqaTechno/{projectUrlPath}/_sprints/taskboard",
    "repo": "https://dev.azure.com/TaqaTechno/{projectUrlPath}/_git/{repoName}",
    "pr": "https://dev.azure.com/TaqaTechno/{projectUrlPath}/_git/{repoName}/pullrequest/{prId}",
    "pipeline": "https://dev.azure.com/TaqaTechno/{projectUrlPath}/_build?definitionId={pipelineId}",
    "wiki": "https://dev.azure.com/TaqaTechno/{projectUrlPath}/_wiki/wikis"
  },

  "aliasResolution": {
    "description": "Resolve common aliases to project names",
    "caseSensitive": false,
    "matchPartial": true,
    "examples": {
      "relief": "Relief Center",
      "rc": "Relief Center",
      "kg": "KhairGate",
      "pm": "Property Management",
      "hr": "TAQAT HR"
    }
  }
}
