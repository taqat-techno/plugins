  "mentionFormat": {
    "htmlTemplate": "<a href=\"#\" data-vss-mention=\"version:2.0,guid:{GUID}\">@{DISPLAY_NAME}</a>",
    "plainTextFallback": "@{DISPLAY_NAME}",
    "guidPattern": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  },

  "resolutionRules": {
    "exactMatch": {
      "priority": 1,
      "description": "Exact match on email or displayName"
    },
    "searchTermMatch": {
      "priority": 2,
      "description": "Match on any searchTerm"
    },
    "partialMatch": {
      "priority": 3,
      "description": "Partial match - requires user confirmation"
    },
    "noMatch": {
      "priority": 4,
      "description": "No match found - ask user for clarification",
      "action": "DO_NOT_POST"
    }
  },

  "validationRules": {
    "mustResolveViaApi": true,
    "neverGuesGuid": true,
    "neverPostUnresolved": true,
    "confirmAmbiguous": true,
    "suggestAlternatives": true
  },

  "errorMessages": {
    "notFound": "I couldn't find a user matching '@{SEARCH}' in Azure DevOps.",
    "multipleMatches": "Found multiple users matching '@{SEARCH}'. Which one did you mean?",
    "apiError": "I couldn't verify the user mention due to a connection issue.",
    "confirmation": "I found '{DISPLAY_NAME}'. Is this correct?"
  }
}
